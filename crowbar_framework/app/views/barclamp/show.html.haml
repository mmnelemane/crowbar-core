.row
  .col-xs-12
    %h1.page-header
      = display_led_for(:unknown, @role.prop, status_proposal_path(:id => @role.prop, :barclamp => @role.barclamp, :name => @role.inst))

      - if Crowbar::Settings.simple_proposal_ui? && !@role.allow_multiple_proposals?
        = link_to @role.display_name, barclamp_modules_path(:id => @role.barclamp)
      - else
        = link_to "#{@role.display_name}: #{@role.inst.titlecase}", barclamp_modules_path(:id => @role.barclamp)

.panel.panel-default
  .panel-heading
    %h2
      = t(".attributes")

      .btn-group.pull-right
        = edit_barclamp_button(@role.barclamp, @role.inst)

  = render_barclamp_show_attributes @role.barclamp

  .panel-heading
    %h2
      = t(".deployment")

      .btn-group.pull-right
        = edit_barclamp_button(@role.barclamp, @role.inst)

  = render_barclamp_show_deployment @role.barclamp
