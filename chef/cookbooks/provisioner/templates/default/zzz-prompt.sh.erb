if test "$UID" = 0; then
    prompt_suffix="#"
else
    prompt_suffix=">"
fi

case $(readlink /proc/$$/exe 2>/dev/null) in
    */zsh)
        PS1=$'<%= @zsh_prompt_from_template.call %> '
        ;;

    */bash)
        PS1="<%= @bash_prompt_from_template.call %> "
        ;;

    */ash|*/dash)
        PS1="<%= @prompt_from_template.call("${USER}", "${PWD}") %> "
        ;;

    */ksh|*/ksh93)
        PS1="<%= @prompt_from_template.call("${USER}", "${PWD}") %> "
        ;;

    */pdksh|*/*pcksh)
        PS1="<%= @prompt_from_template.call("${USER}", "${PWD}") %> "
        ;;

    */*)
        PS1="<%= @prompt_from_template.call("\\u", "\\w") %> "
        ;;
esac
